<Window x:Class="BACS387Group10Project.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACS387Group10Project"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="300">
    <Grid>
        <Label x:Name="UsernameLogin" Content="Username:" HorizontalAlignment="Left" Margin="22,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLogin" Content="Password:" HorizontalAlignment="Left" Margin="22,77,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Left" Height="23" Margin="133,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordInput" HorizontalAlignment="Left" Height="23" Margin="133,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="91,128,0,0" VerticalAlignment="Top" Width="105" Click="LoginButton_Click" />

    </Grid>
</Window>
